<!DOCTYPE html>
<html>
  <head>
    <title>Autofinder</title>
    <!-- Google Icon Fonts used by Materialize -->
    <link
      href="https://fonts.googleapis.com/icon?family=Material+Icons"
      rel="stylesheet"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx"
      crossorigin="anonymous"
    />
    <!-- Materialize CSS Framework -->
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <!-- JavaScript for Materialize -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg bg-light">
      <div class="container-fluid">
        <a href="/ads" class="navbar-brand"><span class="material-icons">directions_car</span>Autofinder</a>
        <div>
          <ul class="nav">
            <% if (user) { %>
            <li class="nav-item">
              <a class="nav-link" href="/profile"><span class="material-icons">account_circle</span>Profile</a>
            </li>
            <% } else { %>
            <li class="nav-item">
              <a class="nav-link" href="/auth/google"><span class="material-icons">login</span>Sign in with Google</a>
            </li>
            <% } %>
          </ul>
        </div>
      </div>
    </nav>

    <main>
<nav class="navbar navbar-expand-lg bg-light">
    <div class="container-fluid">
      <div>
        <ul class="nav">
          <li class="nav-item">
            <a class="nav-link" href="/profile/new"><span class="material-icons">add</span>Create Ad</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/profile/favorite"><span class="material-icons">favorite</span>Favorite Ads</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/logout"><span class="material-icons">logout</span>Log Out</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>
  <h2>welcome! <%= user.name %></h2>
<div>
    <h3>current ads:</h3>
    <% ads.forEach(ad => { %>
        <div class="ad">
            <img src="<%= ad.pictures[0] %>" width="200">
            <%= ad.title; %>
            <%= ad.milege; %>km
            $<%= ad.price; %>
            <br><a href="/ads/<%= ad._id %>"><span class="material-icons">directions_car</span>view</a>
             <a href="/profile/<%= ad._id %>/modify"><span class="material-icons">build</span>modify</a>
             <a href="/profile/<%= ad._id %>/delete"><span class="material-icons">delete</span>delete</a>
        </div>
    <% }) %>
</div>
<%- include('../partials/footer') %>
