      <br /><input type="text" name="picture1" placeholder="enter url"/>
      <br /><input type="text" name="picture2" placeholder="enter url"/>
      <br /><input type="text" name="picture3" placeholder="enter url"/>
      <br /><input type="text" name="picture4" placeholder="enter url"/>
    <% } else if(ad.pictures.length === 1) { %>
      <br /><input type="text" name="picture1" placeholder="enter url" value="<%= ad.pictures[0] %>"/>
      <br /><input type="text" name="picture2" placeholder="enter url"/>
      <br /><input type="text" name="picture3" placeholder="enter url"/>
      <br /><input type="text" name="picture4" placeholder="enter url"/>
    <% }  else if(ad.pictures.length === 2) { %>
      <br /><input type="text" name="picture1" placeholder="enter url" value="<%= ad.pictures[0] %>"/>
      <br /><input type="text" name="picture2" placeholder="enter url" value="<%= ad.pictures[1] %>"/>
      <br /><input type="text" name="picture3" placeholder="enter url"/>
      <br /><input type="text" name="picture4" placeholder="enter url"/>
    <% } else if(ad.pictures.length === 3) { %>
      <br /><input type="text" name="picture1" placeholder="enter url" value="<%= ad.pictures[0] %>"/>
      <br /><input type="text" name="picture2" placeholder="enter url" value="<%= ad.pictures[1] %>"/>
      <br /><input type="text" name="picture3" placeholder="enter url" value="<%= ad.pictures[2] %>"/>
      <br /><input type="text" name="picture4" placeholder="enter url"/>
    <% } else if(ad.pictures.length === 4) { %>
      <br /><input type="text" name="picture1" placeholder="enter url" value="<%= ad.pictures[0] %>"/>
      <br /><input type="text" name="picture2" placeholder="enter url" value="<%= ad.pictures[1] %>"/>
      <br /><input type="text" name="picture3" placeholder="enter url" value="<%= ad.pictures[2] %>"/>
      <br /><input type="text" name="picture4" placeholder="enter url" value="<%= ad.pictures[3] %>"/>
    <% } %>
    <br /><br /><label>Enter Mileage:</label> <br /><input
      type="number"
      name="milege"
      required="required"
      value="<%= ad.milege %>"
    />
    km
    <br /><br /><label>Enter Selling Price:</label> <br />$<input
      type="number"
      name="price"
      required="required"
      value="<%= ad.price %>"
    />
    <br /><br /><label>Description:</label> <br /><textarea
      name="description"
      required="required"
    >
<%= ad.description %></textarea
    >
    <br /><br /><label><h6>Contact Information:</h6></label> <br /><label
      >Name:</label
    >
    <br /><input
      type="text"
      name="name"
      required="required"
      value="<%= ad.contact.name %>"
    />
    <br /><br /><label>Phone Number:</label> <br /><input
      type="text"
      name="phone"
      required="required"
      value="<%= ad.contact.phone %>"
    />
    <br /><br /><label>Postal Code:</label> <br /><input
      type="text"
      name="postal"
      required="required"
      value="<%= ad.contact.postal %>"
    />
    <br /><br /><input type="submit" value="Modify" />
  </form>
</div>
